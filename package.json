{
  "name": "panthora",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "turbo start",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter=@panthora/app",
    "dev:docs": "turbo dev --filter=@panthora/docs",
    "dev:website": "turbo dev --filter=@panthora/website",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "screenshots": "turbo screenshots",
    "dependency-update": "npm-check-updates -u --filterVersion \"/^[~^<>]| - |\\.x$/\" --deep && pnpm install"
  },
  "engines": {
    "node": "20",
    "pnpm": "8"
  },
  "packageManager": "pnpm@8.7.6",
  "devDependencies": {
    "npm-check-updates": "^16.14.20",
    "turbo": "^1.13.3"
  }
}
